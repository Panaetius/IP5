#:kivy 1.0
#:import win kivy.core.window

Widget:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            # this implicitly binds the size of the
            # rect to the size of the widget
            size: self.size
            # self here still refers to the widget as Rectangle is only a
            # graphics instruction and not a widget
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            id: camimage
            size_hint: 1, 0.3
            source: app.camsource

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2

            Image:
                id: predimage1
                size_hint: 0.3, 1
                source: app.pred1source
            Label:
                id: predlabel1
                size_hint: 0.7, 1
                text: app.pred1text

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2

            Image:
                id: predimage2
                size_hint: 0.3, 1
                source: app.pred2source
            Label:
                id: predlabel2
                size_hint: 0.7, 1
                text: app.pred2text

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.2

            Image:
                id: predimage3
                size_hint: 0.3, 1
                source: app.pred3source
            Label:
                id: predlabel3
                size_hint: 0.7, 1
                text: app.pred3text

        Button:
            size_hint: 1, 0.1
            text: 'Take a picture'
            width: self.texture_size[0] + dp(40)
            height: '48dp'
            on_release: app.take_picture()